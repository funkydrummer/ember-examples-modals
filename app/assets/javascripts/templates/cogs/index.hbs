<button {{action create}}>Create</button>

<table>
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>
  <tbody>
    {{#each controller}}
    <tr>
      <td>{{#link-to 'cogs.show' this}}{{name}}{{/link-to}}</td>
      <td class="actions">
        <button {{action edit this}}>edit</button>
        <button {{action confirmDelete this}}>delete</button>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
